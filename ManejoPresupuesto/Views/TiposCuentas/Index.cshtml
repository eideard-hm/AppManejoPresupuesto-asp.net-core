@model IEnumerable<TipoCuenta>

@{
    ViewData["Title"] = "Tipos cuentas";
}

<h1>Tipos cuentas</h1>
<h5>
    El tipo de cuenta se refiere a cómo podemos agrupar cuentas.
    Ejm: Préstamos, tarjetas de crédito, etc.
</h5>

<a asp-action="Crear" class="btn btn-primary">Crear nuevo</a>

<table class="table table-dark table-striped mt-2">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Nombre</th>
        </tr>
    </thead>
    <tbody id="reordenable">
        @if(@Model is not null){
            @foreach (var tipoCuenta in Model)
            {
                <tr>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@tipoCuenta.Id">Edit</a>
                        <a class="btn btn-danger" onclick="javascript:return confirm('¿Seguro que desea elimiar el registro: @tipoCuenta.Nombre?');" asp-action="Delete" asp-route-id="@tipoCuenta.Id" >Delete</a>
                    </td>
                    <td>@tipoCuenta.Nombre</td>
                </tr>
            }
        }else{
            <tr>
                <td colspan="12">No se encontrarón resultados.</td>
            </tr>
        }

    </tbody>
</table>

@section Scripts{
    <script>
       $(function(){
           $("#reordenable").sortable();
       })
    </script>
}
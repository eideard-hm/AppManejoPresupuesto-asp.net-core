@model TipoCuenta

@{
    ViewData["Title"] = "Crear Tipo Cuenta";
}

<h1>Crear tipo de cuenta</h1>

<h5>
    El tipo de cuenta se refiere a cómo podemos agrupar cuentas.
    Ejm: Préstamos, tarjetas de crédito, etc.
</h5>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Crear">
    <div class"mb-3">
        <label asp-for="Nombre" class="form-label"></label>
        <input type="text" class="form-control" asp-for="Nombre" />
        <span class="text-danger" asp-validation-for="Nombre"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Enviar</button>
    <a asp-action="Index" class="btn btn-danger">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}